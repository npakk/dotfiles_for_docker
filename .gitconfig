[user]
	name = npakk
	email = npakk669@gmail.com
[core]
	editor = nvim
	pager = delta
[init]
	defaultBranch = main
[diff]
	alogorithm = histogram
[color]
	ui = auto
[alias]
	co = checkout
	s = status
	b = branch
	c = commit
	ps = push
[delta]
	syntax-theme = Solarized (dark)
	navigate = true
	line-numbers = true
	side-by-side = true
	minus-style = syntax "#482323"
	plus-style = syntax "#2b3c2b"
[interactive]
	diffFilter = delta --color-only
[ghq]
	root = ~/ghq
